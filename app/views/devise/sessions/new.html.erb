<div class="container" style="padding-botton: 100%">
  <h2 class="text-center pt-4">Log in</h2>
  <div class="d-flex justify-content-center pt-2">
    <div class="card" style="width: 25rem;">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, placeholder: 'Login with email ', autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, placeholder: 'Your password', autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-block btn-lg btn-info' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
